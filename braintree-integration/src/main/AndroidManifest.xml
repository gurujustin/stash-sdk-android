<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.mobilabsolutions.stash.braintree">
    <application>

        <activity android:name="com.mobilabsolutions.stash.braintree.internal.uicomponents.BraintreePayPalActivity"
                  android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            />
        <activity android:name="com.mobilabsolutions.stash.braintree.internal.uicomponents.BraintreeCreditCardActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            />
        <activity android:name="com.braintreepayments.api.BraintreeBrowserSwitchActivity"
                  android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="${applicationId}.braintree" />
            </intent-filter>
        </activity>
    </application>
</manifest>
